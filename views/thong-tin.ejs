    <%include header%>
    <div class="container-fluid px-4" style="background-color: rgba(128, 128, 128, 0.169);">
        <div class="row">
            <div class="col-3 my-4" style="width: 300px; background-color: white;">
                <div class="thongtinchungkh mt-3">
                    <div class="thongtinanh">
                        <img src="/images/anhdaidien.jpg">
                    </div>
                    <div class="thongtintk">
                        <span class="tenkhang"><%=nguoidung.TenKH%></span>
                        <a href="/users/thong-tin" class="suahoso"><i class="fa fa-pencil" aria-hidden="true"></i> Sửa hồ sơ</a>
                    </div>
                </div>
                <div class="list_taikhoan" >
                    <ul>
                        <li><a href="/users/tai-khoan"><i class="far fa-user" aria-hidden="true"></i> Trang tài khoản</a></li>
                        <li><a href="/users/thong-tin"><i class="fas fa-user-edit"></i> Thông tin cá nhân</a></li>
                        <li><a href="/cart/don-hang"><i class="far fa-clipboard" aria-hidden="true"></i> Đơn hàng</a></li>
                        <li><a href="/users/thay-doi-mat-khau"><i class="fas fa-lock"></i> Thay đổi mật khẩu</a></li>
                        <li><a href=""><i class="far fa-bell" aria-hidden="true"></i> Thông báo</a></li>
                        <li><a href="/users/dang-xuat"><i class="fa fa-sign-in" aria-hidden="true"></i> Đăng xuất</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-9 my-4">
              <div class="row">
                  <div class="col-8">
                   <form action="/users/thong-tin" method="POST">
                    <div class="capnhatthongtintaikhoan">
                        <div class="tieudecapnhat">Hồ sơ của tôi</div>
                        <small>Quản lý thông tin hồ sơ để bảo mật tài khoản</small>
                        <table>
                            <tr>
                                <td width="150px" class="o1">Tên tài khoản</td>
                                <td class="o2"><%=nguoidung.TenTaiKhoan%></td>
                            </tr>
                            <tr>
                                <td class="o1">Tên khách hàng</td>
                                <td class="o2"><input type="text" name="ten" class="tenkh" value="<%=nguoidung.TenKH%>"></td>
                            </tr>
                            <tr>
                                <td class="o1">Email</td>
                                <td class="o2"><%=nguoidung.Email%>
                                    <a href="" id="email">Thay đổi</a>
                                    <div id="oemail">
                                        <input type="text" class="email" name="email">
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="o1">Điện thoại</td>
                                <td class="o2"><%=nguoidung.DienThoai%>
                                    <a href="" id="sdt">Thay đổi</a>
                                    <div id="osdt">
                                        <input type="text" class="sodt" name="sdt">
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="o1">Ngày sinh</td>
                                <td class="o2">
                                    <ul>
                                        <li>
                                            <select class="ngay" name="ngaysinh" id="ngay" value="<%=nguoidung.NgaySinh%>">
                                            </select>
                                        </li>
                                        <li>
                                            <select class="thang" name="thangsinh" id="thang" value="<%=nguoidung.ThangSinh%>">
                                            </select>
                                        </li>
                                        <li>
                                            <select class="nam" name="namsinh" id="nam" value="<%=nguoidung.NamSinh%>">
                                            </select>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                            <tr>
                                <td class="o1">Giới tính</td>
                                <td class="o2">
                                    <select class="gioitinh" name="gt" id="" value="<%=nguoidung.GioiTinh%>">
                                        <option>Nam</option>
                                        <option>Nữ</option>
                                        <option>Khác</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td class="o1">Địa chỉ</td>
                                <td class="o2"><%=nguoidung.DiaChi%>
                                    <a href="" id="diachi">Thay đổi</a>
                                    <div id="odiachi">
                                        <input type="text" class="diachi" name="dc">
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <div class="text-center">
                            <button type="submit" class="btn btn-warning text-right"><i class="fas fa-save    "></i> Lưu</button>
                        </div>
                    </div>
                       </form>
                  </div>
                  <div class="col-4  bg-white">
                    <div class="capnhatthongtintaikhoan">
                        <div class="tieudecapnhat">Ảnh đại diện</div>
                        <small>Cập nhật ảnh đại diện</small>
                        <div class="anhdaidientk">
                            <!-- <img src="/images/anhdaidien.jpg" alt=""> -->
                            <div class="form-group">
                              <label class="custom-file">
                                <input type="file" name="" id="" placeholder="" class="custom-file-input" aria-describedby="fileHelpId">
                                <span class="custom-file-control">
                                    <img src="/images/anhdaidien.jpg" alt="">
                                </span>
                              </label>
                            </div>
                            <div class="dinhdang">Định dạng:.JPEG, .PNG</div>
                        </div>
                    </div>
                  </div>
              </div>
            </div>
        </div>
    </div>
    <%include footer%>