    <%include header%>
    <div class="container-fluid px-4" style="background-color: rgba(128, 128, 128, 0.169);">
        <div class="row">
            <div class="col-3 my-4" style="width: 300px; height: 350px; background-color: white;">
                <div class="thongtinchungkh mt-3">
                    <div class="thongtinanh">
                        <img src="/images/anhdaidien.jpg">
                    </div>
                    <div class="thongtintk">
                        <span class="tenkhang"><%=nguoidung.TenKH%></span>
                        <a href="/users/thong-tin" class="suahoso"><i class="fa fa-pencil" aria-hidden="true"></i> Sửa hồ sơ</a>
                    </div>
                </div>
                <div class="list_taikhoan" >
                    <ul>
                        <li><a href="/users/tai-khoan"><i class="far fa-user" aria-hidden="true"></i> Trang tài khoản</a></li>
                        <li><a href="/users/thong-tin"><i class="fas fa-user-edit"></i> Thông tin cá nhân</a></li>
                        <li><a href="/cart/don-hang"><i class="far fa-clipboard" aria-hidden="true"></i> Đơn hàng</a></li>
                        <li><a href="/users/thay-doi-mat-khau"><i class="fas fa-lock"></i> Thay đổi mật khẩu</a></li>
                        <li><a href=""><i class="far fa-bell" aria-hidden="true"></i> Thông báo</a></li>
                        <li><a href="/users/dang-xuat"><i class="fa fa-sign-in" aria-hidden="true"></i> Đăng xuất</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-9">
                <%data1.forEach(function(donhang) {
                    if (donhang.TrangThai != "Tạo giỏ hàng") {%>
                        <div class="donhang my-4">
                            <div class="ttdonhang1">
                            <div class="row">
                                <div class="col-5">
                                    <div class="madonhang">Mã đơn hàng: <%= donhang.MaDH%></div>
                                    <div class="thoigiandonhang">Đã đặt vào <%= donhang.ThoiGianDH%></div>
                                </div>
                                <div class="col-7 text-right">
                                        <span class="badge badge-pill badge-success trangthai"><%= donhang.TrangThai%></span>
                                </div>
                            </div>
                            </div>
                            <div class="ttdonhang2">
                                <table class="table"> 
                                    <tbody>
                                        <%data2.forEach(function(sp){
                                            if (sp.MaDH == donhang.MaDH) {%>
                                                <tr>
                                                    <td scope="row" style="width: 100px;" class="text-center"><img src="<%= sp.HinhAnh%>" alt="" width="50px"></td>
                                                    <td style="width: 600px;" >
                                                        <div class="tenspdonhang"><%= sp.TenSP%></div>
                                                        <div class="soluongspdh">x <%= sp.SoLuong%></div>
                                                    </td>
                                                    <td>
                                                        <div class="col-3 text-center" style="margin-top: 15px; color: rgb(255, 89, 0);"><%= sp.DonGia.toLocaleString('vi-VN')%>đ</div>
                                                    </td>
                                                </tr>
                                        <%}})%>
                                    </tbody>
                                </table>
                            </div><hr>
                            <div class="ttdonhang3">
                            <div class="row">
                                <div class="col-8"></div>
                                <div class="col-4 mb-4">
                                    <span class="tongtien"><i class="fas fa-shekel-sign"></i> Tổng tiền: </span>
                                    <span class="sotongtien"><%= donhang.ThanhTien.toLocaleString('vi-VN')%>đ</span>
                                </div>
                            </div>
                            </div>
                            <div class="ttdonhang1">
                                <div class="row">
                                    <div class="col-5">
                                        <div class="chuydonhang">Bạn hài lòng với sản phẩm đã nhận? Nếu có, chọn "Đã nhận được hàng" nha.</div>   
                                    </div>
                                    <div class="col-2"></div>
                                    <div class="col-5 text-right">
                                        <%if (donhang.TrangThai == "Nhận hàng thành công") {%>
                                            <div class="nutnhanhang">Nhận hàng thành công</div>
                                        <%} else {%>
                                            <div class="nutnhanhang"><a href="/cart/chi-tiet-don-hang/nhan-hang-thanh-cong/ID=<%=donhang.MaDH%>" class="btn btn-primary">Đã được nhận hàng</a> </div>
                                        <%}%>
                                        <div class="xemdonhang"><a href="/cart/chi-tiet-don-hang/<%=donhang.MaDH%>" class="btn btn-outline-warning">Xem đơn hàng</a></div>
                                    </div>
                                </div>
                            </div>    
                        </div>
                <%}})%>
            </div>
        </div>
    </div>
    <%include footer%>